<a href="/news">Link to the News Portal</a>

<h2> Edit Article: {{news.title}}</h2>

<form action="/news/{{news._id}}/edit" method="POST">
  <label for="">Title</label>
  <input style="color:black" type="text" name="title" value="{{news.title}}">


  <label for="">Category </label>
  <select name="">
    {{#each categoryArray}}
    <option value="{{this}}"> {{this}}</option>
    {{/each}}
  </select>

  <label for="image"> Image </label>
    <input style="color:black" type="text" name="image" value="{{news.image}}">

  <label for="content"> Content </label>
  <textarea cols="70" rows="100" name="content">{{news.content}}</textarea>


  <button class="m-1 btn btn-secondary" type="submit">Save Changes</button>

</form>

